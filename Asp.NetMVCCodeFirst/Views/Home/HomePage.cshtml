@using Asp.NetMVCCodeFirst.ViewModels.Home
@model HomePageViewModel
@{
    ViewBag.Title = "HomePage";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 style="text-align:center; margin-bottom:10px; margin-top:10px;">Home Page</h3>
            <hr />
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">   

            <div style="margin-bottom:20px;">
                @Html.ActionLink("New Contacts","YeniKisi","Kisi",null,new { @class = "btn btn-dark" })
            </div>
            
            <ul class="list-group">
                <li class="list-group-item active" style="text-align:center">
                    My Contacts
                </li>
                @foreach (var kisi in Model.Kisiler)
                {
            <li class="list-group-item">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-file-earmark-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M2 2a2 2 0 0 1 2-2h5.293A1 1 0 0 1 10 .293L13.707 4a1 1 0 0 1 .293.707V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm7.5 1.5v-2l3 3h-2a1 1 0 0 1-1-1zM11 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm2 5.755S12 12 8 12s-5 1.755-5 1.755V14a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-.245z" />
                </svg>

                @(kisi.Ad + " " + kisi.Soyad) (<i>@kisi.Yas</i>)

                @Html.ActionLink("Edit", "Duzenle", "Kisi", new { kisiId = kisi.Id }, new { @class = "btn btn-warning btn-sm float-right", style="margin-left:5px;" })
                @Html.ActionLink("Delete", "Sil", "Kisi", new { kisiId = kisi.Id }, new { @class = "btn btn-danger btn-sm float-right" })

            </li>
                }
            </ul>

        </div>

        <div class="col-md-6"> 
            
            <div style="margin-bottom:20px;">
                @Html.ActionLink("New Address", "YeniAdres", "Adres", null, new { @class = "btn btn-dark" })
            </div>

            <ul class="list-group">
                <li class="list-group-item active" style="text-align:center">
                    Addresses
                </li>
                @foreach (var adres in Model.Adresler)
                {
                    <li class="list-group-item">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-house-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 3.293l6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                            <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                        </svg>
                        @adres.AdresTanim (<i>@(adres.Kisi.Ad + " " + adres.Kisi.Soyad)</i>)

                       @Html.ActionLink("Edit","Duzenle","Adres", new { adresId=adres.Id }, new { @class="btn btn-warning btn-sm float-right", style="margin-left:5px;" })
                       @Html.ActionLink("Delete","Sil","Adres", new { adresId=adres.Id }, new { @class="btn btn-danger btn-sm float-right" })
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
