@model Asp.NetMVCCodeFirst.Models.Adresler
@{
    ViewBag.Title = "Sil";
}

<h3 style="text-align:center" margin-bottom:10px; margin-top:10px;>Adres Sil</h3>
<hr />
<p>
    Aşağıdaki adres kaydını silmek istediğinizden emin misiniz ?
</p>

    <div class="form-group">
        <div class="input-group-append" style="margin-bottom:5px;">
            <span class="input-group-text" id="txtAd">Name : </span>
        </div>
        @Html.DisplayFor(x => x.Kisi.Ad, new { @class = "form-control col-12", aria_describedby = "txtAd" })
    </div>

    <div class="form-group">
        <div class="input-group-append" style="margin-bottom:5px;">
            <span class="input-group-text" id="txtSoyad">Surname : </span>
        </div>
        @Html.DisplayFor(x => x.Kisi.Soyad, new { @class = "form-control col-12", aria_describedby = "txtSoyad" })
    </div>

    <div class="form-group">
        <div class="input-group-append" style="margin-bottom:5px;">
            <span class="input-group-text" id="txtAdresTanim">Addressed : </span>
        </div>
        @Html.DisplayFor(x => x.AdresTanim, new { @class = "form-control col-12", aria_describedby = "txtAdresTanim" })
    </div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
}
<div class="input-group mb-2">
    @if (ViewBag.Result != null)
    {
        <div class="alert alert-@ViewBag.Status" role="alert">
            @ViewBag.Result
        </div>
    }
</div>




